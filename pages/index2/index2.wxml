<!--category.wscroll-xml-->
<view class="page-index">
    <view class="banner">
        <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{imgUrls}}">
            <swiper-item>
            <image src="{{item}}" class="slide-image" width="355" height="150"/>
            </swiper-item>
        </block>
        </swiper>
    </view>

    <view class="content">
        <view class="commiditys">
            <view class="recommend">
                <view class="label">推荐商品</view>
                <view class="recommend-item" bindtap="toDetailsTap">
                    <view class="pic">
                        <image src="{{list[0].imgUrl}}" ></image>
                    </view>
                    <view class="title">{{list[0].name}}</view>
                    <view class="info">
                        <view class="price">{{list[0].price}}</view>
                        <view class="count">{{list[0].salesCount}}</view>
                    </view>
                </view>
            </view>
            <view class="hot">
                <view class="label">热卖商品</view>
                <view class="hot-wrap">
                    <view class="hot-item" bindtap="toDetailsTap">
                        <view class="pic">
                            <image src="../../images/zb_02.png" ></image>
                        </view>
                        <view class="text">
                            <view class="title">昭和无惨绘｜丸尾末广×花轮和一 新英名二十八</view>
                            <view class="info">
                                <view class="price">35</view>
                                <view class="count">98</view>
                            </view>
                        </view>                      
                    </view>

                    <view class="hot-item" bindtap="toDetailsTap">
                        <view class="pic">
                            <image src="../../images/zb_03.png" ></image>
                        </view>
                        <view class="text">
                            <view class="title">昭和无惨绘｜丸尾末广×花轮和一 新英名二十八</view>
                            <view class="info">
                                <view class="price">35</view>
                                <view class="count">98</view>
                            </view>
                        </view>                      
                    </view>
                   <icon type="success" size="20" class="post"/>
                </view>
            </view>
        </view>
    </view>
</view>
